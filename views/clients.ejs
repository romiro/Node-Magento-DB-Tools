<% layout('layout'); %>

<% script('/js/db-view.js'); %>

<h2>Clients</h2>

<div id="clients" class="database-view"></div>

<div id="template" class="client-template">
    <div class="panel panel-primary">
        <div class="panel-body">
            <form>
                <input type="hidden" name="id" />
                <div class="form-group">
                    <label for="name">Client Name</label>
                    <input type="text" class="form-control name" name="client_name" placeholder="Client Name" />
                </div>

                <div class="form-group">
                    <label for="client_code">Client Code</label>
                    <input type="text" class="form-control" name="client_code" placeholder="Two to three letter client code" />
                </div>

                <div class="form-group">
                    <label for="client_color">Color</label>
                    <div class="input-group client-color">
                        <span class="input-group-addon"><i></i></span>
                        <input type="text" class="form-control" name="client_color" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function(){
        var clients = new Clients();
    });
</script>